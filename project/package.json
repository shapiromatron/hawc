{
    "name": "hawc-frontend",
    "license": "MIT",
    "version": "1.0.0",
    "description": "HAWC frontend code",
    "scripts": {
        "clean": "rimraf ./static/bundles/* && rimraf ./webpack-stats.json",
        "build:webpack": "NODE_ENV=production webpack --config webpack.config.prod.js",
        "build:dev": "webpack --config webpack.config.dev.js",
        "build": "npm run clean && npm run build:webpack",
        "prettier-watch": "onchange '**/*.js' -- prettier --write {{changed}}",
        "precommit": "lint-staged",
        "start": "node devServer.js",
        "test":
            "env NODE_PATH=$NODE_PATH:$PWD/assets mocha ./assets/tests/ --compilers js:babel-core/register --require ./assets/tests/test_helper.js --recursive",
        "test:watch": "npm run test -- --watch",
        "lint": "eslint assets",
        "prettify": "prettier --config=./.prettierrc --write \"**/*.{js,css}\""
    },
    "lint-staged": {
        "*.{js,json,css}": ["prettier --write", "git add"]
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/shapiromatron/hawc.git"
    },
    "devDependencies": {
        "babel-cli": "^6.26.0",
        "babel-core": "^6.26.0",
        "babel-eslint": "^8.0.2",
        "babel-generator": "^6.26.0",
        "babel-loader": "^7.1.2",
        "babel-plugin-dynamic-import-webpack": "^1.0.2",
        "babel-plugin-syntax-dynamic-import": "^6.18.0",
        "babel-plugin-syntax-object-rest-spread": "^6.13.0",
        "babel-plugin-transform-object-rest-spread": "^6.26.0",
        "babel-polyfill": "^6.26.0",
        "babel-preset-env": "^1.6.1",
        "babel-preset-react": "^6.24.1",
        "babel-preset-stage-0": "^6.24.1",
        "chai": "^4.1.2",
        "css-loader": "^0.28.7",
        "enzyme": "^3.2.0",
        "eslint": "^4.12.0",
        "eslint-plugin-babel": "^4.1.2",
        "eslint-plugin-react": "^7.5.1",
        "exports-loader": "^0.6.4",
        "express": "^4.16.2",
        "happypack": "^4.0.0",
        "husky": "^0.14.3",
        "imports-loader": "^0.7.1",
        "lint-staged": "^5.0.0",
        "mocha": "^4.0.1",
        "nock": "^9.1.3",
        "prettier": "^1.9.2",
        "redux-devtools": "^3.4.1",
        "redux-devtools-dock-monitor": "^1.1.2",
        "redux-devtools-log-monitor": "^1.4.0",
        "redux-logger": "^3.0.6",
        "redux-mock-store": "^1.3.0",
        "rimraf": "^2.4.3",
        "sinon": "^4.1.2",
        "style-loader": "^0.19.0",
        "unexpected": "^10.36.2",
        "unexpected-react": "^5.0.1",
        "webpack": "^3.8.1",
        "webpack-bundle-tracker": "^0.2.0",
        "webpack-dev-middleware": "^1.12.2"
    },
    "dependencies": {
        "clipboard": "^1.7.1",
        "d3": "^3.5.17",
        "filesaver.js": "^0.2.0",
        "history": "^4.7.2",
        "isomorphic-fetch": "^2.2.1",
        "lodash": "^4.17.4",
        "moment": "^2.19.2",
        "prop-types": "^15.6.0",
        "quill": "^1.3.4",
        "react": "^16.1.1",
        "react-autosuggest": "^9.3.2",
        "react-datepicker": "^0.61.0",
        "react-dom": "^16.1.1",
        "react-quill": "^1.2.0",
        "react-redux": "^5.0.6",
        "react-router": "^4.2.0",
        "react-router-dom": "^4.2.2",
        "react-select": "^1.2.1",
        "react-tabs": "^2.2.1",
        "redux": "^3.7.2",
        "redux-thunk": "^2.2.0",
        "slugify": "^1.2.9",
        "sortablejs": "^1.5.0-rc1",
        "tablesort": "^4.1.0",
        "velocity-react": "^1.3.3"
    }
}
